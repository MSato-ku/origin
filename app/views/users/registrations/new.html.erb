<div class="main">
<div class="all">
  <div class="sign-up">
  <h2>新規登録</h2>
  </div>

<div class="new-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <!--サインアップ時に名前を入力できるようにフォームを追加-->
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :プロフィール画像 %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>&ensp;(<%= @minimum_password_length %> 文字以上)&ensp;</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %></tr>
  </div>

  <div class="actions">
    <%= f.submit "登録", class:'button' %>
  </div>
<% end %>
<div class="back">
<%= link_to "戻る", users_show_path, class:'button' %>
</div>
</div>
</div>

<%#= render "users/shared/links" %>
</div>